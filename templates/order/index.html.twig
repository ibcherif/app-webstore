{% extends 'base.html.twig' %}

{% block title %}Valider ma Commande{% endblock %}

{% block content %}
    <h2>Je passes ma commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande sur le app-WebStore</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <b>Choisir mon adresse de livraison</b><br/>
            {% set formHtml %}
                    {{ form(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]':'<br/>'})|raw}}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Récapitulation de ma commande</b><br/>
                <p>Rétrouvez le récapitulatif de vos produits.</p>
            </div>
            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="/upload/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px"><br/>
                        </div>
                        <div class="col-8 my-auto7">
                            {{ product.product.name }}<br/>
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <b>Bouton pour payer</b>
        </div>
    </div>
{% endblock %}
