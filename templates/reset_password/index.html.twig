{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block  content%}
    <div class="block-small">
        {% for message in app.flashes %}
            <div class="alert alert-info">{{ message[0] }}</div>
        {% endfor %}
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
            <label for="inputEmail">Votre Email</label>
            <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Merci de saisier votre Email" required autofocus>

            <button class="btn btn-lg btn-info btn-block mt-3" type="submit">Valider</button>
            <hr>
            <p class="text-center"> Ou souhaitez-vous<a href="{{ path('app_login') }}">vous connecter</a></p>
        </form>
    </div>
{% endblock %}
